group("parent_child") {
  testonly = true

  deps = [
    ":child_module",
    ":parent_module",
  ]
}

executable("child_module") {
  testonly = true

  sources = [
    "child_module.cc",
  ]
  deps = [
    "//apps/modular/lib/fidl:single_service_app",
    "//apps/modular/lib/testing",
    "//apps/modular/services/story",
    "//apps/mozart/services/views",
    "//lib/mtl",
  ]
}

executable("parent_module") {
  testonly = true

  sources = [
    "parent_module.cc",
  ]
  deps = [
    "//apps/modular/lib/fidl:single_service_app",
    "//apps/modular/lib/testing",
    "//apps/modular/services/story",
    "//apps/mozart/services/views",
    "//lib/mtl",
  ]
}
