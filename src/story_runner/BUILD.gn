    "module_controller_impl.cc",
    "module_controller_impl.h",
    "module_context_impl.cc",
    "module_context_impl.h",
    "story_impl.cc",
    "story_impl.h",
    "story_provider_impl.cc",
    "story_provider_impl.h",
    "story_storage_impl.cc",
    "story_storage_impl.h",
