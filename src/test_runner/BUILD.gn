executable("test_runner") {
  sources = [
    "test_runner.cc",
    "test_runner_store_impl.cc",
    "test_runner_store_impl.h",
  ]

  deps = [
    "//application/lib/app",
    "//apps/modular/lib/fidl:scope",
    "//apps/modular/services/test_runner",
    "//lib/ftl",
    "//lib/mtl",
  ]
}

source_set("test_runner_client") {
  sources = [
    "test_runner_client.h",
    "test_runner_client.cc",
  ]
  deps = [
    "//lib/ftl",
    "//third_party/rapidjson"
  ]
}

executable("run_modular_tests") {
  sources = [
    "run_modular_tests.cc",
  ]
  deps = [
    ":test_runner_client",
    "//lib/ftl",
  ]
}
